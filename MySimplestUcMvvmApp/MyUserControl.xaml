<UserControl x:Class="MySimplestUcMvvmApp.MyUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="#FF343434">
        <StackPanel>
            <Label Content="{Binding StringFromUserControl}" HorizontalAlignment="Left" VerticalAlignment="Top" Background="Red"/>
            <Label Content="{Binding StringDPForUserControlToSetFromOutside}" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FF80FF00"/>
        </StackPanel>

    </Grid>
</UserControl>
